@model MyStoreFront1.Models.Products;

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-4">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="col-8">
        <dl>
            <dt>Name</dt>
            <dd>@Model.Name</dd>
            <dt>Description</dt>
            <dd>@Model.Description</dd>
            <dt>Price</dt>
            <dd>@(Model.Price.HasValue ? Model.Price.Value.ToString("c") : "No Price")</dd>
<!--            <button class="btn btn-dark">Add to cart</button>-->
        </dl>
        <form asp-action="index" asp-controller="products" method="post">
<!--            <input type="hidden" name="name" value="@Model.Name">  -->
            <input type="submit" value="Add to cart" class="btn btn-dark" />
        </form>
    </div>
</div>