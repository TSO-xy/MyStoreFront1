@model IEnumerable<MyStoreFront1.Models.Products>
@{ 
    //Layout = null;
}
<head>
    <style>
       h1 { text-align: center; }
       img {
           margin-right: 20px;
       }
    </style>
</head>
<h1>Products</h1>
<br />
<div class="row">
<div class="col-12">
    @foreach (var product in Model)
    {
     <div class="row">
         <div class="col-4"> 
            <img src="@product.ImageUrl" class="img-fluid" style="max-height: 200px"/>
        </div>
     <div class="col-8"> 
            <h4>@product.Name</h4>
            <br>
            <p>@product.Description</p>

            <p>@product.Price</p>
            <div class="form-group">
            <form asp-action="index" asp-controller="products" method="post">
               <input type="submit" value="Add to cart" class="btn btn-dark" />
            </form>  
            </div>
     </div>   
     </div>
     <br />
     }
</div>